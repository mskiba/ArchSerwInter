<%= simple_form_for @todo, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :tytul, :label => t('tytul'), :input_html => { :class => 'input-xxlarge' }  %>
  <%= f.input :opis, :label => t('opis'), :input_html => { :rows => '8', :class => 'input-xxlarge' } %>

  <div class="control-group text optional">
    <label class="text optional control-label" for="todo_deadline"><%= t('deadline') %></label>
    <div class="controls">
      <div class="input-append">
		  <%= f.text_field :deadline_date, :class => 'datepicker', :size => 3, :maxlength => 10, :id => 'datetimepicker' %><span class="add-on"><i class="icon-calendar"></i></span>
		  <%= f.text_field :deadline_time, :size => 3, :maxlength => 5, :id => 'osobno_godzina', :style => 'margin-left: 10px;' %>
		<span class="add-on"><i class="icon-calendar"></i></span>
      </div>
    </div>
  </div>  
  
  <%= f.input :priorytet, :label => t('priorytet'), :collection => -2..2 %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                todos_path, :class => 'btn' %>
  </div>
<% end %>
